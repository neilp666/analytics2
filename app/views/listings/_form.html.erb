<%= form_for @listing, :html => { :multipart => true } do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




  <h3>job listing will remain on this site for 45 days. After 45 days your job listing will expire and be removed.</h3>
  <br/>



<div class="form-group">
    <%= f.label "job title" %>
    <%= f.text_field :job, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "location - for example London" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Job description" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <legend>2. Tell us about your company</legend>
  
  <div class="form-group">
    <%= f.label "Your Company Name" %>
    <%= f.text_field :company_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "How do they apply - add email address" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "About the company 25 chars max" %>
    <%= f.text_area :about, class: "form-control" %>
  </div>

  <div class="form-group">
    <p>update your company logo if you want</p>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Company Website" %>
    <%= f.text_field :company_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Company email address for reciept" %>
    <%= f.text_field :company_email, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.submit "Submit Information", class: "btn btn-success" %>
  </div>


<% end %>




